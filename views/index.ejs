    <!--Jumbotron-->
    <form action="/blogs" method="POST">
    <section class="main-container" style="margin-top: 80px;">

      <div class="container">
        <div class="jumbotron bg-light" style="border-radius: 30px;">
          <div class="row">
            <div class="col-sm-2">
              <!--Info Icon-->
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
              </svg>
              <!--Icon-->
            </div>
            <div class="col ">
              <h4>This is the official South African COVID-19 Vaccination Programme portal.</h4>
              <ul>
                <li>Vaccination is voluntary and no payments is..</li>
                <li>Everyone who registered will be...</li>
                <li>Registration is...</li>
                <li>We are moving down the age groups as...</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="container" style="margin-top: 30px">
        <div class="row">
          <div class="col-sm-4 container-fluid">
            <div class="input-group "> <!-- Question -->
              <button type="button" class="btn btn-outline-secondary">Are you 18 years or older?</button>
              <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="true">
                <span class="visually-hidden">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu"> <!-- Answer -->
                <li> <input type="checkbox" id="Yes" name="Legal Age" required> Yes </li>
                <li> <input type="checkbox" id="No" name="Legal Age" required> No </li>
              </ul>
            </div>
            <p class="navbar-text">Tap the box above to make a choice</p>
          </div>
        </div>
      </div>
    </section>

    <div class="container mb-5">
      <div> <!-- Button -->
        <button type="button" class="btn btn-outline-primary container-fluid" >Register For Vaccination</button>
      </div>
    </div>
  </form>

